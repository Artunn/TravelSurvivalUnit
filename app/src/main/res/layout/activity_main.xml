<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="31dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/city_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:text="@string/city_name"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/degree_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:text="@string/degree"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="56dp" />

        <TextView
            android:id="@+id/currency_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:text="@string/currency1_str"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/city_main"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="107dp" />

        <TextView
            android:id="@+id/currency_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="120dp"
            android:text="@string/currency2_str"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/city_main"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/last_retrieved_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="160dp"
            android:text="@string/last_retrieved"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="164dp" />

        <TextView
            android:id="@+id/name_surname_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="30dp"
            android:text="@string/name_surname"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="56dp" />

        <TextView
            android:id="@+id/trans_dir_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="50dp"
            android:text="@string/translation_dir"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="87dp" />

        <TextView
            android:id="@+id/country_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="70dp"
            android:text="@string/country"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="116dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="105dp"
            app:srcCompat="@android:drawable/ic_menu_rotate"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="122dp" />

        <TextView
            android:id="@+id/refresh_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="135dp"
            android:text="@string/refresh"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            tools:layout_editor_absoluteY="157dp" />

        <View
            android:id="@+id/divider_main"
            android:layout_width="1dp"
            android:layout_height="75dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="25dp"
            android:clickable="false"
            android:visibility="visible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/translation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/translation_button_text"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/traditions_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/traditions_button_text"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/fun_facts_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fun_facts_button_text"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/world_clock_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/world_clock_button_text"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_button_text"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/my_favourites_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favourites_button_text"
            android:textAllCaps="false"
            android:textSize="24sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>